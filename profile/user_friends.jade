template(name='user_friend')
    a.ui.item(href="/u/#{user.username}/")
        if user.profile_image_id
            img.ui.avatar.image.superzoom(src="{{c.url user.profile_image_id width=300 height=300 gravity='face' crop='fill'}}")
        //- .visible.content
        |#{user.shortname}
        // |@#{user.username}
        // +user_status user

template(name='user_segment')
    a.item(href="/u/#{username}")
        img.ui.avatar.image(src="{{c.url profile_image_id gravity='face' crop='fit'}}")
        .content
            .ui.inline.header
                |#{name}
            small #{points}
            unless is_friend
                .ui.button.add_friend
                    i.plus.icon
