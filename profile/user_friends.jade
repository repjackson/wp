template(name='user_friends')
    +user_friend_button
    .ui.stackable.grid
        .two.column.row
            .column
                .ui.small.header friends with
                .ui.middle.aligned.selection.animated.list
                    each current_user.friend_ids
                        +user_friend
                    each friends
                        +user_segment
            .column
                .ui.small.header friended by
                .ui.middle.aligned.selection.animated.large.list.smallscroll
                    each friended_by
                        +user_segment
